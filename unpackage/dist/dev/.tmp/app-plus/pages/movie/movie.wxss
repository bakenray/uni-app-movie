	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background: #000;
}
.movie-video{
	width:100%;
	height:440rpx;
}
.movie-info{
	 display: -webkit-box;
	 display: -webkit-flex;
